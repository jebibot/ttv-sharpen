{
  "name": "TTV Sharpen",
  "description": "트위치의 영상에 선명하게 필터를 적용합니다.",
  "version": "1.1.2",
  "manifest_version": 3,
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "exclude_globs": [
        "*://api.twitch.tv/*"
      ],
      "js": [
        "script.js"
      ],
      "css": [
        "style.css"
      ],
      "matches": [
        "*://*.twitch.tv/*"
      ],
      "all_frames": true
    }
  ]
}
